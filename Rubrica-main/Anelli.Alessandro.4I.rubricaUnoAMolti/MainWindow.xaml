<Window x:Class="Anelli.Alessandro._4I.rubricaUnoAMolti.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Anelli.Alessandro._4I.rubricaUnoAMolti"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <!-- Griglia Persone -->
        <DataGrid x:Name="dataGridPersone" Grid.Column="0" Grid.Row="0" Margin="10" SelectionChanged="dataGridPersone_SelectionChanged"></DataGrid>

        <!-- Griglia Contatti -->
        <DataGrid x:Name="dataGridContatti" Grid.Column="1" Grid.Row="0" Margin="10"></DataGrid>

        <TextBlock x:Name="statusBar" Grid.Column="0" Grid.Row="1"></TextBlock>

    </Grid>
    

</Window>
